<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Controllers.Activities.Fragments.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_scroll"
            android:stretchColumns="1">

            <!-- everything you already have -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/labelSave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="0.1in"
                        android:text="Dernière sauvegarde : " />
                    <TextView
                        android:id="@+id/labelSaveValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Succes"
                        android:textSize="0.1in"
                        android:text="2020/03/23" />
                    <ImageView
                        android:id="@+id/InfoSaveIcone"
                        android:layout_marginTop="5dp"
                        android:layout_width="0.1in"
                        android:layout_height="0.1in"
                        android:layout_marginLeft="0.06in"
                        android:src="@drawable/ic_check" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/LabelUpdate"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="0.1in"
                        android:layout_height="wrap_content"
                        android:text="Dernière mise a jour : " />
                    <TextView
                        android:id="@+id/LabelUpdateValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="0.1in"
                        android:textColor="@color/Feild"
                        android:text="2020/03/23" />
                    <ImageView
                        android:id="@+id/InfoUpdateIcone"
                        android:layout_marginTop="5dp"
                        android:layout_width="0.1in"
                        android:layout_height="0.1in"
                        android:layout_marginLeft="0.06in"
                        android:src="@drawable/ic_close" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="0.01in"
                android:background="@color/black"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/lab1"
                    android:layout_marginTop="5dp"
                    android:layout_width="0.2in"
                    android:layout_height="0.2in"
                    android:layout_marginLeft="0.06in"
                    android:src="@drawable/ic_next_week" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="Prochaine séance " />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.constraintlayout.widget.ConstraintLayout>



                <com.applandeo.materialcalendarview.CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="2.3in"

                    app:headerColor="@color/white"
                    app:headerLabelColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:todayLabelColor="@color/Succes">


                </com.applandeo.materialcalendarview.CalendarView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:layout_height="0.01in"
                android:background="@color/black"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/lab2"
                    android:layout_marginTop="5dp"
                    android:layout_width="0.2in"
                    android:layout_height="0.2in"
                    android:layout_marginLeft="0.06in"
                    android:src="@drawable/ic_heart" />
                <TextView
                    android:id="@+id/UpdateCoach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="Activité de moniteur " />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vvp"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="1.3in"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                >

            </androidx.viewpager.widget.ViewPager>

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="0.1in"
                app:ci_width="0.1in"
                app:ci_gravity="center"
                app:ci_drawable="@drawable/dots"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                >
                <ImageView
                    android:id="@+id/lab3"
                    android:layout_marginTop="5dp"
                    android:layout_width="0.2in"
                    android:layout_height="0.2in"
                    android:layout_marginLeft="0.06in"
                    android:src="@drawable/ic_note" />
                <TextView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="15dp"
                    android:textSize="20dp"
                    android:text="Note recente" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/textView4sw"
                android:paddingLeft="0.1in"
                android:paddingTop="0.1in"
                android:paddingEnd="0.1in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
